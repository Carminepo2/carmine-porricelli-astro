---
import i18next, { t } from "i18next"
import { localizeUrl } from "@/utils/astro-i18next";

const supportedLanguages = i18next.languages;
const currentUrl = Astro.url.href;
---

<!DOCTYPE html>
<html lang={i18next.language}>

<head>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
	<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
	<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
	<link rel="manifest" href="/site.webmanifest" />
	<link rel="mask-icon" href="/safari-pinned-tab.svg" color="#f59f0b" />
	<meta name="msapplication-TileColor" content="#f59f0b" />
	<meta name="theme-color" content="#f59f0b" />
	<script is:inline src="/js/check-theme.js" />

	{supportedLanguages.map((supportedLanguage) => (
	<link rel="alternate" hreflang={supportedLanguage} href={localizeUrl(currentUrl, supportedLanguage)} />
	))}

	<title>Carmine Porricelli</title>
	<meta name="description" content={t("header.subtitle")} />
</head>

<body>
	<slot />
</body>

</html>