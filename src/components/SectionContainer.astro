---
import { cn } from '@/lib/utils'
import type { HTMLTag, Polymorphic } from 'astro/types'

type Props<Tag extends HTMLTag = 'div'> = Polymorphic<{
  as: Tag
}>

const { as = 'div', ...props } = Astro.props
const Tag: any = as
---

<Tag {...props} class={cn('mx-auto max-w-3xl px-4 pt-12 lg:max-w-5xl xl:max-w-6xl', props.class)}><slot /></Tag>
